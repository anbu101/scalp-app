{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Scalp",
  "version": "0.1.3",
  "identifier": "com.scalp",

  "build": {
    "frontendDist": "../../frontend/build"
  },

  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "icon": ["icons/icon.icns"],
    "resources": ["backend"]
  },

  "app": {
    "trayIcon": {
      "iconPath": "icons/tray.png"
    },
    "windows": [
      {
        "label": "main",
        "title": "Scalp",
        "width": 1100,
        "height": 720,
        "resizable": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },

  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://raw.githubusercontent.com/anbu101/scalp-app/wip/backtest-cpr-e21/ota/macos/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEIwMURGRUQwNERGN0Y0NDIKUldSQzlQZE4wUDRkc04zN3FMMnVKUW1HLzV6dmZKTUhwK294cGZ4bjh6dGdaY2NMT2NkVnMwRTAK"
    }
  }
}
